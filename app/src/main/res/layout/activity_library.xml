<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006064"
    tools:context=".LibraryActivity">

    <TextView
        android:id="@+id/textViewHeaderLA"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#004D40"
        android:gravity="center"
        android:text="@string/textViewHeaderLA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonMenuLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#004D40"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHeaderLA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewHeaderLA"
        app:srcCompat="@drawable/menu_button_image"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        android:contentDescription="@string/imageButtonMenuLA" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLibraryLA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeaderLA" />
</androidx.constraintlayout.widget.ConstraintLayout>